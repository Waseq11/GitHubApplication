<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MWFinalProject2022.EditTask">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="txtId" Text=""/>
            <Entry x:Name="txtTaskDescription" Text="" Placeholder="Description"/>
            <DatePicker x:Name="dpDate"/>
            <Button x:Name="btnConfirm" Text="Edit" BackgroundColor="DeepSkyBlue" CornerRadius="10" FontSize="20" Clicked="btnConfirm_Clicked"/>
            <Button x:Name="btnCancel" Text="Cancel" BackgroundColor="Red" CornerRadius="10" FontSize="20" Clicked="btnCancel_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>